.checkmark {
  width: 100%;
  height: 600px;
  margin-right: auto;
  margin-left: auto;
  background: url(' <%= asset_path("check-mark-md-bright-yellow.png") %> ');
  background-size: 100%;
  background-repeat: no-repeat;
  background-position: center center;
  background-color: #99FF99;
}

.todolist {
  padding: 0px;
  border: 0px;
}

table {
  width: 100%;
}

.newtodoline {
  width: 100%;
  padding: 0;
  margin-left: 0;
}

tr {
  height: 40px;
  color: #34425c;
}

h1 {
  text-align: left;
}

th {
  height: 50px;
  text-size: extra-large;
  font_weight: bold;
  background-color: #FFA366;
  color: white;
  font-family: Century Gothic, serif;
  padding: 10px;
}

.new_todo_form {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}

.description {
  width: 50%;
  text-align: left;
  padding: 0 0 0 15px;
  font-family: Forte, sans-serif;
  font-size: 200%;
}

.text_field {
  font-family: Forte, sans-serif;
  font-size: 200%;
  margin-left: -85px;
}

.days_old {
  width: 25%;
  text-align: center;
}

.completed {
  width: 25%;
  text-align: center;
  color: #ff3f00;
  font-size: 150%;
}

.completed a {
  color: #ff3f00;
}

.centerlist {
  margin-top: 70px;
  width: 80%;
  margin-left: auto;
  margin-right: auto;
}

.centerlist h1 {
  text-align: left;
}

.centerlist a {
  color: #fc834e;
}