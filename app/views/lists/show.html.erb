<div class="container">
  <div class = "centerlist">
    <div class = "checkmark">
      <div id = "primary-content">
        <div class = "table">
            <h1><%= @list.title %></h1>
            <small class="cutoff">Cutoff: <%= @list.cutoff %> days</small>
            <table>
              <tr >
                <th class="tableheadings description">Description</th>
                <th class="tableheadings days_old">Days Old</th>
                <th class="tableheadings completed"></th>
              </tr>
              <% @todos.each do |t| %>
                <tr class="tablerows">
                  <td class="description"><%= t.description %></td>
                  <td class="days_old"><h3><%= t.age_of_todo %></h3></td>
                  <td class="completed"><%= button_to 'Completed', {:id => t.id, :action => 'destroy', :controller => 'todos'}, :method => :delete, data: {confirm: 'Do you want to delete this Todo?'} %></td>
                 </tr>
              <% end %>
              <tr>
                <td style{width: 100%}>
                  <div class="description text_field">
                  <%= form_for @todo do |form| %>
                    <%= form.text_field :description, placeholder: 'Add new todo', size: 25 %></div>
                  <div class="days_old">
                    <%= form.hidden_field :list_id, :value => @list.id %></div>
                  <div class="completed savetodo">
                    <%= form.submit 'Save Todo' %></div>
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
  
  
  
</div>

<%= javascript_include_tag "turbolinks_transitions" %>