
<h1>Current TODO list</h1>

<% @Todos = current_user.todos %>
<% def Age_of_todo(t) %>
   <%= (((t.created_at + 7.days) - Time.now)/(60*60*24)).round %>
<% end %>


<table>
  <tr>
    <th class="description"><h4>Description</h3></th>
    <th class="days_old"><h4>Days Old</h4></th>
    <th class="completed"><h4>Completed?</h4></th>
  </tr>
  <% @Todos.each do |t|%>
    <tr>
      <td class="description"><%= t.description %></td>
      <td class="days_old"><%= Age_of_todo(t) %></td>
      <td class="completed"><%= button_to 'Completed', {:id => t.id, :action => 'destroy'}, :method => :delete, data: {confirm: 'Do you want to delete this Todo?'} %></td>
    </tr>
  <% end %>
</table>


