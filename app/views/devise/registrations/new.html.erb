<div class="container">
  <div class="centerlist">
  <div class = "checkmark">
  <div id = 'primary-content'>
    <h1>Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%=f.label :name %><br />
        <%= f.text_field :name, placeholder: 'Name', autofocus: true %></div>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, placeholder: 'Email' %></div>

      <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %></div>

      <div><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off" %></div>

      <div><%= f.submit "Sign Up" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
</div>